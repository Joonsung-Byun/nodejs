<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= data.title %> - NodeTrip</title>
  <link href="/output.css" rel="stylesheet">
  <link href="/main.css" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body class="min-h-screen detail">

  <%- include('nav.ejs') %>
  
  <div id="detailWrapper" class="pt-24 pb-16">
    <div class="max-w-4xl mx-auto px-4">
      
      <!-- Article Header -->
      <article class="card-modern p-8 mb-8">
        <header class="mb-8">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6 leading-tight">
            <%= data.title %>
          </h1>

          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 pb-6 border-b border-gray-200">
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 rounded-full bg-gradient-to-r from-purple-400 to-pink-400 flex items-center justify-center">
                <span class="text-white font-bold text-lg"><%= data.writer.charAt(0).toUpperCase() %></span>
              </div>
              <div>
                <p class="font-semibold text-gray-800 text-lg"><%= data.writer %></p>
                <p class="text-gray-500"><%= data.date %></p>
              </div>
            </div>

            <div class="flex items-center gap-4">
              <button class="flex items-center gap-2 px-4 py-2 rounded-xl border border-purple-200 hover:bg-purple-50 transition-all duration-300" id="likeBtn" data-postId="<%= `post_id_${data.id}` %>">
                <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
                </svg>
                <span class="font-semibold"><%= likes.length %></span>
              </button>
              
              <button class="flex items-center gap-2 px-4 py-2 rounded-xl border border-gray-200 hover:bg-gray-50 transition-all duration-300">
                <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
                </svg>
                Share
              </button>
            </div>
          </div>
        </header>

        <!-- Tags -->
        <% let tagArray=data.tags.split(',') %>
        <% if(tagArray.length > 1 || (tagArray.length === 1 && tagArray[0] !== "")) { %>
        <div class="mb-8">
          <div class="flex flex-wrap gap-2">
            <% for (let i=0; i < tagArray.length; i++) { %>
              <span class="px-3 py-1 text-sm font-medium bg-gradient-to-r from-purple-100 to-pink-100 text-purple-700 rounded-full">
                #<%= tagArray[i].trim() %>
              </span>
            <% } %>
          </div>
        </div>
        <% } %>

        <!-- Article Content -->
        <div class="prose prose-lg prose-purple max-w-none mb-8">
          <div id="content" class="text-gray-700 leading-relaxed">
            <%= data.content %>
          </div>
        </div>
      </article>

      <!-- Comments Section -->
      <section class="card-modern p-8">
        <div class="mb-8">
          <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-3">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
            Comments
          </h2>
          
          <!-- Add Comment Form -->
          <div class="mb-8">
            <div class="bg-gray-50 rounded-2xl p-4 mb-4">
              <textarea id="comment" rows="4"
                class="w-full bg-transparent text-gray-700 placeholder-gray-500 border-0 focus:ring-0 focus:outline-none resize-none"
                placeholder="Share your thoughts about this story..."></textarea>
            </div>
            <div class="flex justify-end">
              <button id="commentBtn" data-postId="<%= data.id %>"
                class="btn-gradient px-6 py-3">
                Post Comment
              </button>
            </div>
          </div>

          <!-- Comments List -->
          <div id="commentSection" class="space-y-6">
            <% if(comments.length > 0) { %>
              <% for (let i=0; i < comments.length; i++) { %>
                <div class="bg-gray-50 rounded-2xl p-6">
                  <div class="flex items-start gap-4">
                    <% if(comments[i].writer_image == null) { %>
                      <div class="w-10 h-10 rounded-full bg-gradient-to-r from-blue-400 to-purple-400 flex items-center justify-center flex-shrink-0">
                        <span class="text-white font-semibold text-sm"><%= comments[i].writer.charAt(0).toUpperCase() %></span>
                      </div>
                    <% } else { %>
                      <img class="w-10 h-10 rounded-full object-cover flex-shrink-0" src="<%= comments[i].writer_image %>" alt="<%= comments[i].writer %>">
                    <% } %>
                    
                    <div class="flex-1">
                      <div class="flex items-center gap-3 mb-2">
                        <h4 class="font-semibold text-gray-800"><%= comments[i].writer %></h4>
                        <span class="text-sm text-gray-500"><%= comments[i].created_at %></span>
                      </div>
                      <p class="text-gray-700 leading-relaxed"><%= comments[i].content %></p>
                    </div>
                  </div>
                </div>
              <% } %>
            <% } else { %>
              <div class="text-center py-12">
                <svg class="w-12 h-12 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
                <p class="text-gray-500 text-lg" id="noComment">No comments yet</p>
                <p class="text-gray-400 text-sm mt-1">Be the first to share your thoughts!</p>
              </div>
            <% } %>
          </div>
        </div>
      </section>
    </div>
  </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/like.js"></script>
    <script src="/comment.js"></script>

</body>

</html>